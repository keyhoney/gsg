{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["@cloudflare/workers-types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/server/*": ["src/server/*"],
      "@/lib/*": ["src/lib/*"],
      "@/views/*": ["src/views/*"],
      "@/components/*": ["src/components/*"],
      "@/routing/*": ["src/routing/*"],
      "@env": ["types/env.ts"]
    }
  },
  "include": [
    "types/**/*.ts",
    "src/**/*",
    "functions/**/*"
  ],
  "exclude": ["dist", "node_modules"]
}
